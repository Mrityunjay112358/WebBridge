{
  "manifest_version": 3,
  "name": "WebBridge - AI Accessibility Assistant",
  "version": "1.0.0",
  "description": "Intelligent AI-powered accessibility assistant that adapts to your specific needs",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "http://localhost:5000/*"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebBridge Accessibility",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  
  "icons": {
    "48": "icons/icon48.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}